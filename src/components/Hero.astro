---
// Hero Section Component
interface Props {
  name: string;
  tagline: string;
  description: string;
  calendlyUrl?: string;
  theme?: string;
}

const { name, tagline, description, calendlyUrl } = Astro.props;
---

<section class="min-h-screen flex items-center justify-center bg-charcoal text-soft-white px-6 py-20">
  <div class="max-w-5xl mx-auto text-center">
    <h1 class="font-serif text-5xl md:text-7xl mb-6 leading-tight">
      {name}
    </h1>
    <p class="text-xl md:text-2xl mb-4 font-light max-w-3xl mx-auto">
      {tagline}
    </p>
    <p class="text-lg md:text-xl mb-12 font-light max-w-2xl mx-auto opacity-90">
      {description}
    </p>
    <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
      <a
        href="#contact"
        class="bg-copper hover:bg-opacity-90 text-soft-white px-8 py-4 rounded-sm transition-all font-medium text-lg"
      >
        Get in Touch
      </a>
      {calendlyUrl && (
        <a
          href={calendlyUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="border-2 border-soft-white hover:bg-soft-white hover:text-charcoal text-soft-white px-8 py-4 rounded-sm transition-all font-medium text-lg"
        >
          Schedule a Call
        </a>
      )}
    </div>
  </div>
</section>
