---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import About from '../components/About.astro';
import InvestmentApproach from '../components/InvestmentApproach.astro';
import Contact from '../components/Contact.astro';
import { loadSiteConfig, loadAboutContent, loadApproachContent } from '../utils/content';

// Load content for the site
const siteName = 'middle-coast';
const config = loadSiteConfig(siteName);
const aboutContent = loadAboutContent(siteName);
const approachContent = loadApproachContent(siteName);
---

<Layout title={`${config.name} - ${config.tagline}`}>
  <Hero 
    name={config.name}
    tagline={config.tagline}
    description={config.description}
    calendlyUrl={config.contact.calendlyUrl}
  />
  <About 
    title={aboutContent.title}
    content={aboutContent.content}
  />
  <InvestmentApproach 
    title={approachContent.title}
    pillars={approachContent.pillars}
  />
  <Contact 
    calendlyUrl={config.contact.calendlyUrl}
  />
  
  <footer class="bg-charcoal text-soft-white py-8 px-6">
    <div class="max-w-6xl mx-auto text-center">
      <p class="opacity-75">
        &copy; {new Date().getFullYear()} {config.name}. All rights reserved.
      </p>
    </div>
  </footer>
</Layout>
