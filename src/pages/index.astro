import Hero from '../components/Hero.astro';
import About from '../components/About.astro';
import InvestmentApproach from '../components/InvestmentApproach.astro';
import Contact from '../components/Contact.astro';
---

<Layout title="Middle Coast - Midwest Real Estate Investment Firm">
  <Hero />
  <About />
  <InvestmentApproach />
  <Contact />
  
