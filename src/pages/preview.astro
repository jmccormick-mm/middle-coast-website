---
import Hero from '../components/Hero.astro';
import About from '../components/About.astro';
import InvestmentApproach from '../components/InvestmentApproach.astro';
import Contact from '../components/Contact.astro';
import { loadSiteConfig, loadAboutContent, loadApproachContent } from '../utils/content';

// Load content for the site
const siteName = 'middle-coast';
const aboutContent = loadAboutContent(siteName);
const approachContent = loadApproachContent(siteName);

// Get theme from query parameter (default to professional)
const url = Astro.url;
const theme = url.searchParams.get('theme') || 'professional';

// Load mockup config for the selected theme
import fs from 'fs';
import path from 'path';

let config;
try {
  const mockupPath = path.join(process.cwd(), 'mockups', siteName, `config-${theme}.json`);
  const mockupData = fs.readFileSync(mockupPath, 'utf-8');
  config = JSON.parse(mockupData);
} catch (error) {
  // Fallback to default config
  config = loadSiteConfig(siteName);
}

// Generate custom CSS for the theme
const customStyles = `
  :root {
    --color-primary: ${config.colors.primary};
    --color-secondary: ${config.colors.secondary};
    --color-accent: ${config.colors.accent};
  }
  .bg-charcoal { background-color: ${config.colors.primary} !important; }
  .text-charcoal { color: ${config.colors.primary} !important; }
  .bg-soft-white { background-color: ${config.colors.secondary} !important; }
  .text-soft-white { color: ${config.colors.secondary} !important; }
  .bg-copper, .hover\\:bg-copper:hover { background-color: ${config.colors.accent} !important; }
  .text-copper { color: ${config.colors.accent} !important; }
  .border-soft-white { border-color: ${config.colors.secondary} !important; }
  body { font-family: ${config.fonts.body}, sans-serif; }
  .font-serif { font-family: ${config.fonts.heading}, serif !important; }
`;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href={`https://fonts.googleapis.com/css2?family=${encodeURIComponent(config.fonts.heading)}:ital,wght@0,400;0,700;1,400&family=${encodeURIComponent(config.fonts.body)}:wght@300;400;500;600;700&display=swap`}
      rel="stylesheet"
    />
    <title>{config.name} - {config.tagline} ({theme} theme)</title>
    <style set:html={customStyles}></style>
  </head>
  <body class="font-sans bg-soft-white text-charcoal">
    <!-- Theme Selector -->
    <div class="fixed top-4 right-4 z-50 bg-white shadow-lg rounded-lg p-4">
      <p class="text-sm font-semibold mb-2">Preview Theme:</p>
      <div class="flex flex-col gap-2">
        <a href="?theme=professional" class={`px-3 py-1 rounded text-sm ${theme === 'professional' ? 'bg-blue-600 text-white' : 'bg-gray-100 hover:bg-gray-200'}`}>
          Professional
        </a>
        <a href="?theme=modern" class={`px-3 py-1 rounded text-sm ${theme === 'modern' ? 'bg-blue-600 text-white' : 'bg-gray-100 hover:bg-gray-200'}`}>
          Modern
        </a>
        <a href="?theme=elegant" class={`px-3 py-1 rounded text-sm ${theme === 'elegant' ? 'bg-blue-600 text-white' : 'bg-gray-100 hover:bg-gray-200'}`}>
          Elegant
        </a>
      </div>
    </div>

    <Hero 
      name={config.name}
      tagline={config.tagline}
      description={config.description}
      calendlyUrl={config.contact.calendlyUrl}
    />
    <About 
      title={aboutContent.title}
      content={aboutContent.content}
    />
    <InvestmentApproach 
      title={approachContent.title}
      pillars={approachContent.pillars}
    />
    <Contact 
      calendlyUrl={config.contact.calendlyUrl}
    />
    
    <footer class="bg-charcoal text-soft-white py-8 px-6">
      <div class="max-w-6xl mx-auto text-center">
        <p class="opacity-75">
          &copy; {new Date().getFullYear()} {config.name}. All rights reserved.
        </p>
      </div>
    </footer>
  </body>
</html>
