{
	"name": "middle-coast-website",
	"version": "1.0.0",
	"description": "Static investor website for Middle Coast - a Midwest real estate investment firm. Built with Astro for simplicity and future extensibility.",
	"type": "module",
	"scripts": {
		"dev": "astro dev",
		"build": "astro check && astro build",
		"preview": "astro preview",
		"astro": "astro",
		"generate": "tsx cli/generate.ts",
		"promote": "tsx cli/commands/promote.ts",
		"setup": "npm install && echo 'Please install the Astro extension in VS Code if not already installed: astro-build.astro-vscode'",
		"check-extensions": "echo 'Required VS Code extensions:' && echo '- Astro (astro-build.astro-vscode)' && echo '- Tailwind CSS IntelliSense (bradlc.vscode-tailwindcss)' && echo '- Prettier (esbenp.prettier-vscode)'",
		"lint": "biome lint --write .",
		"lint:fix": "biome check --write .",
		"test": "vitest",
		"test:run": "vitest run",
		"test:watch": "vitest --watch",
		"test:ui": "vitest --ui",
		"test:coverage": "vitest run --coverage",
		"test:tdd": "vitest --watch --reporter=verbose"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"dependencies": {
		"@anthropic-ai/sdk": "^0.68.0",
		"@astrojs/react": "^4.4.2",
		"@tailwindcss/vite": "^4.1.17",
		"@types/react": "^19.2.2",
		"@types/react-dom": "^19.2.2",
		"astro": "^5.15.3",
		"cheerio": "^1.1.2",
		"commander": "^14.0.2",
		"gray-matter": "^4.0.3",
		"react": "^19.2.0",
		"react-dom": "^19.2.0",
		"tailwindcss": "^4.1.17",
		"tsx": "^4.20.6"
	},
	"devDependencies": {
		"@astrojs/check": "^0.9.5",
		"@biomejs/biome": "2.3.4",
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/react": "^16.3.0",
		"@testing-library/user-event": "^14.6.1",
		"@types/node": "^24.10.0",
		"@vitest/ui": "^4.0.7",
		"happy-dom": "^20.0.10",
		"jsdom": "^27.1.0",
		"typescript": "^5.9.3",
		"vitest": "^4.0.7"
	}
}
